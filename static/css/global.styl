ph-red = #DA552F
reading-dark = #3D3D3D
near-black = #242424
gray1 = #eeeeee
gray2 = #DEDEDE
gray3 = #919191

body
  font-family 'Open Sans'
  font-size 16px
  margin 0
  overflow hidden
  color reading-dark

a
  text-decoration none
  color ph-red

.header
  position fixed
  z-index 1
  top 0
  left 0
  width 100%
  height 40px
  line-height 40px
  color #ffffff
  text-align center
  background-color ph-red

  .back
    float left
    width 50%
    color #ffffff
    background linear-gradient(to left, ph-red 2%, mix(#ffffff, ph-red, 10%) 0, ph-red 10%)

  .tab
    float left
    width 50%
    color #ffffff
    background linear-gradient(to right, ph-red 2%, mix(#ffffff, ph-red, 10%) 0, ph-red 10%)

.list
  position fixed
  top 40px
  left 0
  width 100%
  height calc(100% - 40px)
  transition left 0.5s
  overflow-y scroll
  -webkit-overflow-scrolling touch

.page
  position fixed
  top 40px
  left 100%
  width 100%
  transition left 0.5s
  height calc(100% - 40px)

  iframe
    width 100%
    height 100%
    border 0

.discussion
  position fixed
  top 40px
  left 100%
  width 100%
  transition left 0.5s
  height calc(100% - 40px)
  overflow-y scroll
  -webkit-overflow-scrolling touch
  background-color gray1

  .author
    height 40px

  .comment
    overflow hidden
    padding 18px 12px
    border 1px solid #cccccc
    margin-top -1px
    background-color #ffffff

  .children
    .comment
      margin-left 18px

  .name
    font-weight bold

  .text
    font-size 16px

.date
  color gray3
  height 59px
  line-height 58px
  text-align center
  font-weight bold
  border-right 50px solid gray1

.post
  position relative
  overflow hidden
  border-bottom 1px solid gray2
  border-top 1px solid gray2
  margin-top -1px

  .link
    float left
    width calc(100% - 50px)
    box-sizing border-box
    padding 8px

    .top
      margin-bottom 2px

    .score
      font-size 12px
      color gray3
      position relative
      top -1px

    .title
      margin-left 4px
      font-size 16px
      color near-black

    .tag
      font-size 14px
      color gray3

  .perma
    position absolute
    float left
    width 50px
    height 100%
    background-color gray1

    .comment-icon
      position absolute
      top 50%
      left 50%
      font-size 30px
      margin -16px 0 0 -15px

    .comment-count
      position absolute
      left 50%
      top 50%
      width 19px
      height 13px
      margin -11px 0 0 -13px
      text-align center
      font-size 10px
