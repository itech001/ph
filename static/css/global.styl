ph-red = #DA552F

body
  font-family 'Open Sans'
  margin 0
  overflow hidden

a
  text-decoration none

.header
  position fixed
  z-index 1
  top 0
  left 0
  width 100%
  height 40px
  line-height 40px
  color #ffffff
  text-align center
  background-color ph-red

  .back
    float left
    width 50%

  .tab
    float left
    width 50%
    color #ffffff

.list
  position fixed
  top 40px
  left 0
  width 100%
  height calc(100% - 40px)
  transition left 0.5s
  overflow auto

.page
  position absolute
  top 40px
  left 100%
  width 100%
  transition left 0.5s
  height calc(100% - 40px)

  iframe
    width 100%
    height 100%
    border 0

.date
  color #999999
  height 50px
  line-height 50px
  text-align center
  font-weight bold
  border-bottom 1px solid gray
  border-right 50px solid gray

.post
  position relative
  overflow hidden
  border-bottom 1px solid gray

  .link
    float left
    width calc(100% - 50px)
    box-sizing border-box
    padding 8px

    .score
      font-size 12
      color #999999

    .title
      font-size 16px
      color #000000

    .tag
      font-size 14px
      color #999999

  .perma
    position absolute
    float left
    width 50px
    height 100%
    background-color gray
